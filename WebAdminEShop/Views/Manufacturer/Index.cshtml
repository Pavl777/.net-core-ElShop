 @model IEnumerable<ManufacturerDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="row">
    <div class="col-md">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteManufacturer", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Update", "UpdateManufacturer", new { id = item.Id })
                    </td>

                </tr>
            }

        </table>
    </div>

</div>
